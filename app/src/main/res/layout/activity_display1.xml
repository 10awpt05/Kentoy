<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4BEE4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#D4BEE4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="YOUR DETAILS"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#333333"
            android:paddingBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/displayProfileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Profile Picture"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:background="@drawable/circle_background"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="John Doe"
            android:background="@drawable/input_field_background"
            android:textSize="14sp" />

        <!-- Nickname -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nickname"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvNickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Johnny"
            android:background="@drawable/input_field_background"
            android:textSize="14sp" />

        <!-- Birthday -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birthday"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvBirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="01/01/1990"
            android:background="@drawable/input_field_background"
            android:textSize="14sp" />

        <!-- Gender -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Male"
            android:background="@drawable/input_field_background"
            android:textSize="14sp" />

        <!-- Status -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Single"
            android:background="@drawable/input_field_background"
            android:textSize="14sp" />

        <!-- Zodiac Sign -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zodiac Sign"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvZodiacSign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Capricorn"
            android:background="@drawable/input_field_background"
            android:textSize="14sp" />

        <!-- Address -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="1234 Main St"
            android:background="@drawable/input_field_background"
            android:textSize="14sp" />

        <!-- Contact Number -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact No."
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvContactNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="+123456789"
            android:background="@drawable/input_field_background"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>
